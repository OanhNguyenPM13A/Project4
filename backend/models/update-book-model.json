{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "group",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]+",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]+",
      "minLength": 3
    },
    "quantity": {
      "type": "number",
      "minimum": 0 
    },
    "price": {
      "type": "number",
      "minimum": 0 
    }
  },
  "required": [
    "name",
    "author"
  ],
  "additionalProperties": false
}
